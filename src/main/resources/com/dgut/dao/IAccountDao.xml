<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 命名空间表示对应的java接口 -->
<mapper namespace="com.dgut.dao.IAccountDao">

    <resultMap id="accountMap" type="account">
        <id column="id" property="id"/>
        <result column="money" property="money" />
        <!--association：1对1的对象关联-->
        <association property="user" >
            <id column="id" property="id"/>
            <result column="username" property="username"/>
            <result column="address" property="address"/>
        </association>
    </resultMap>

    <select id="findAllAccount" resultMap="accountMap" >
        select * from account,`user` WHERE account.UID = `user`.id
    </select>


    <resultMap id="accountMap2" type="account">
        <id column="id" property="id"/>
        <result column="money" property="money" />
        <!-- association:
                select:表示执行一条sql语句
                column：表示selct里面的参数
        -->
        <association property="user" select="com.dgut.dao.IUserDao.findUserByID" column="uid">

        </association>
    </resultMap>

    <select id="findAll"  resultMap="accountMap2">
        select  * from account
    </select>


    <select id="findByUid" resultType="account">
        select  * from account where uid = #{ID}
    </select>
</mapper>